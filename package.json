{
  "name": "heroku-fullstack-starter",
  "version": "0.1.0",
  "main": "index.js",
  "author": "George Bockari <bitwhys@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:bitwhys/heroku-fullstack-starter.git",
  "scripts": {
    "build:server": "yarn clean && babel -d dist server -s",
    "clean": "rimraf dist",
    "heroku_postbuild": "yarn build:server",
    "start": "node --optimize_for_size --max_old_space_size=920 --gc_interval=100 dist",
    "start:ui": "cd client && yarn start",
    "start:server": "node server",
    "start:dev": "stmux -w always -e 'ERROR|FAILED' -M -- [ [ -s 1/3 'yarn start:server' .. 'yarn start:ui' ] : zsh ]"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@types/express": "4.17.1",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "stmux": "^1.7.1"
  },
  "dependencies": {
    "express": "^4.17.1",
    "forky": "^1.1.0",
    "morgan": "^1.9.1",
    "password-generator": "^2.2.3"
  }
}
